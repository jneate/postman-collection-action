{
  "name": "postman-collection-action",
  "version": "0.0.0",
  "private": true,
  "description": "Postman Collection Action to push postman collections in the GitHub Repo to a specific Postman Workspace",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jneate/postman-collection-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0",
    "@actions/glob": "^0.2.0",
    "axios": "^0.21.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@typescript-eslint/parser": "^4.27.0",
    "@vercel/ncc": "^0.25.1",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.1.2",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^26.6.3",
    "jest-circus": "^27.0.4",
    "js-yaml": "^4.1.0",
    "prettier": "2.3.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.2"
  }
}
